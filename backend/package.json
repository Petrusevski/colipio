{
  "name": "gtm-crm-backend",
  "version": "0.1.0",
  "description": "NestJS + Prisma backend for GTM CRM using Supabase Postgres and Supabase Auth JWT.",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "start:dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "@prisma/client": "^5.19.0",
    "prisma": "^5.19.0",
    "dotenv": "^16.4.5",
    "cors": "^2.8.5",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3",
    "@types/node": "^22.7.4",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/express": "^4.17.21"
  }
}
